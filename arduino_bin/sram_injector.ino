    pinMode (CS_PIN, OUTPUT);
    digitalWrite(CS_PIN, HIGH);
    pinMode (WE_PIN, OUTPUT);
    digitalWrite(WE_PIN, HIGH);
    pinMode (OE_PIN, OUTPUT);
    digitalWrite(OE_PIN, HIGH);
}


